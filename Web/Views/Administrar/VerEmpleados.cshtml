        var jsonEmpleados = Newtonsoft.Json.JsonConvert.SerializeObject(empleados2);
    }
    var jsonEmpleados = "@jsonEmpleados";
    jsonEmpleados = jsonEmpleados.replace(/&quot;/g, '"');
    var empleados = JSON.parse(jsonEmpleados);
</script>