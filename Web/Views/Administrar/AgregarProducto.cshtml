@using DataAccess.Tablas;

@{
  ViewBag.Title = "AgregarProducto";
}

<h2>AgregarProducto</h2>
<div class="row justify-content-center">
  <div class="col-sm-12 col-md-10">
    <h2>Lista de empleados</h2>
    <table class="table table-sm table-dark">
      <thead>
        <tr>
          <th scope="col">Código</th>
          <th scope="col">Nombre</th>
          <th scope="col">Categoría</th>
          <th scope="col">Marca</th>
          <th scope="col">Proveedor</th>
          <th scope="col">Fecha de compra</th>
          <th scope="col">Fecha Vencimiento</th>
          <th scope="col">Precio</th>
        </tr>
      </thead>

      <tbody>
        @{var insumos = (List<Insumo>)ViewBag.Insumos; }
        @foreach (var insumo in insumos)
        {
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>

            <td>
              <button type="button" class="btn btn-primary boton-editar-empleado" id="boton-editar-empleado-@insumo.Id" data-toggle="modal" data-target="#modaAgregarProducto">
                Editar
              </button>
              @Html.ActionLink(
                   "Agregar",
                   new
                        {

                   },
                   atributosAgregar
               )
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>

<div class="modal fade" id="modaAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">Agregar Producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row justify-content-center">
            <form class="col-sm-10 col-md-12" action="@Url.Action("AgregarProducto", "Administrar")" method="post">
              <div class="row">
                <div class="form-group col-sm-12 col-md-6">
                  <label for="nombre">Nombre</label>
                  <input type="text" required name="Nombre" class="form-control" id="Nombre">
                </div>

                <div class="form-group col-sm-12 col-md-6">
                  <label for="marca">Marca</label>
                  <input type="text" required name="Marca" class="form-control" id="Marca">
                </div>
                <div class="form-group col-sm-12 col-md-6">
                  <label for="rol">Categorías</label>
                  @{ var categorias = (List<CategoriaInsumo>)ViewBag.Categorias; }
                  <select class="custom-select" required name="Categorias">
                    <option value="">Seleccione un cargo</option>
                    @foreach (var categoria in categorias)
                    {
                      <option value="@categoria.Id">@categoria.Nombre</option>
                    }
                  </select>
                </div>
                <div class="form-group col-sm-12 col-md-6">
                  <label for="proveedor">Proveedor</label>
                  <input type="text" required name="Proveedor" class="form-control" id="Proveedor">
                </div>

                <div class="form-group col-sm-12 col-md-6">
                  <label for="fechaCompra">Fecha De Compra</label>
                  <input type="date" required name="fechaCompra" class="form-control" id="fechaCompra" placeholder="Fecha De Compra">
                </div>
                <div class="form-group col-sm-12 col-md-6">
                  <label for="fechaVencimiento">Fecha De Vencimiento</label>
                  <input type="date" required name="fechaVencimiento" class="form-control" id="fechaVencimiento" placeholder="Fecha De Vencimiento">
                </div>
                <div class="form-group col-sm-12 col-md-6">
                  <label for="proveedor">Precio</label>
                  <input type="text" required name="Precio" class="form-control" id="Precio">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Guardar Producto</button>
      </div>
    </div>
  </div>
</div>