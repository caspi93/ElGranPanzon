@using DataAccess.Tablas;

@{
    ViewBag.Title = "AgregarProducto";
}

<div class="container">
    <div class="row justify-content-center">
        <form class="col-sm-10 col-md-12" action="@Url.Action("AgregarInsumo", "Insumo")" method="post">
            <div class="row">
                <div class="form-group col-sm-12 col-md-6">
                    <label class="color-blanco" for="rol">Insumos</label>
                    @{ var insumos = (List<Insumo>
                           )ViewBag.Insumos; }
                    <select class="custom-select" required name="insumos">
                        <option value="">Seleccione un insumo</option>
                        @foreach (var insumo in insumos) {
                            <option value="@insumo.Id">@insumo.Nombre</option>
                        }
                    </select>
                </div>
                <div class="form-group col-sm-12 col-md-6">
                    <label class="color-blanco" for="proveedor">Cantidad a ingresar</label>
                    <input type="text" required name="cantidad" class="form-control" id="Cantidad">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Guardar datos</button>
        </form>
    </div>
</div>

